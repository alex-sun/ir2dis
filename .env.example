# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here

# iRacing Account Configuration
IRACING_EMAIL=your_iracing_email@example.com
IRACING_PASSWORD=your_iracing_password_here
IRACING_PASSWORD_HASHED=false

# Application Settings
TIMEZONE_DEFAULT=Europe/Berlin
POLL_INTERVAL_SECONDS=120
POLL_CONCURRENCY=4
LOG_LEVEL=info

# Database Configuration (SQLite by default)
SQLITE_PATH=data/bot.db
COOKIES_PATH=data/cookies.json

# Discord fast per-guild sync for development:
# If not set, code falls back to 421260739055976468.
DEV_GUILD_ID=421260739055976468

# (optional) COMPOSE_MENU=false

# Wire Logging Configuration
IRACING_WIRE_LOG=0
IRACING_WIRE_LOG_DIR=/app/wirelogs
